<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/functionPad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/colorPrimary"
       >

        <LinearLayout
            android:id="@+id/row11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:visibility="gone"
            >

            <TextView
                android:id="@+id/dispaly_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:hint="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/dispaly_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".16"
            style="?android:attr/buttonBarStyle"
            android:textAlignment="center"
            >



            <Button
                android:id="@+id/buttonMore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".142"
                android:text="@string/buttonMore"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textColor="@android:color/white"

                />


            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".142"
                android:text="@string/button7"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textColor="@android:color/white"

                />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".142"
                android:text="@string/button8"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textColor="@android:color/white"

                />

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".142"
                android:text="@string/button9"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textColor="@android:color/white"


                />


            <Button
                android:id="@+id/buttonClear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".142"
                android:text="@string/buttonClear"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textColor="@android:color/white"

                />
            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".142"
                android:text="@string/buttonMultiply"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@color/colorPrimary"
                android:textSize="20dp"
                android:textColor="@android:color/white"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".16"
            style="?android:attr/buttonBarStyle"
            >



            <Button
                android:id="@+id/buttonSquared"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".142"
                android:text="@string/buttonSquared"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                />

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".142"
                android:text="@string/button4"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                />

            <Button
